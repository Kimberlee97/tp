<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" styleClass="contact-card">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="85" spacing="6" GridPane.columnIndex="0">
      <padding>
        <Insets top="15" right="15" bottom="15" left="20" />
      </padding>

      <!-- name and id -->
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="contact-index">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="contact-name-card" wrapText="true"/>
      </HBox>
      <!-- tags -->
      <FlowPane fx:id="tags" styleClass="contact-tags" hgap="5" vgap="5"/>
      <Label fx:id="meeting" styleClass="contact-meeting" wrapText="true"/>
    </VBox>
  </GridPane>
</HBox>
