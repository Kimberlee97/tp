<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="navigation-panel" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" >
   <children>
      <Label styleClass="navigation-title" text="Navigation" />
      <Button fx:id="dashboardButton" mnemonicParsing="false" onAction="#handleDashboard" styleClass="navigation-button" text="Dashboard" />
      <Button fx:id="contactsButton" mnemonicParsing="false" onAction="#handleContacts" styleClass="navigation-button navigation-button-selected" text="Contacts" />
      <Button fx:id="tasksButton" mnemonicParsing="false" onAction="#handleTasks" styleClass="navigation-button" text="Tasks" />
      <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#handleSettings" styleClass="navigation-button" text="Settings" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <spacing>10.0</spacing>
</VBox>

